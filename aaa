  for(var i=0; i < cities.length; i++){
    var ii = i - 1;
    if((ii == 0) || ((ii % 5) == 0)) {
      appendItem(filteredCities, cities[i]);
      appendItem(filteredlowTemps, lowTemps[i]);
      appendItem(filteredhighTemps, highTemps[i]);
      appendItem(filteredConditons, conditions[i]);
      appendItem(filteredIcons, icons[i]);
    }
  }
  
  randomIndex = randomNumber(0, filteredCities.length);
  
  setText("cityOutput", filteredCities[randomIndex]);
  setText("highTempOutput", filteredhighTemps[randomIndex]);
  setText("lowTempOutput", filteredlowTemps[randomIndex]);
  setText("conditionOutput", filteredConditons[randomIndex]);
  setProperty("iconOutput","image",filteredIcons[randomIndex]);
